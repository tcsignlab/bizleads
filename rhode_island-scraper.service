[Unit]
Description=Rhode Island Business Scraper - 24 Hour Scheduler
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/bizleads-main
ExecStart=/usr/bin/python3 /path/to/bizleads-main/rhode_island_scheduler.py
Restart=always
RestartSec=60
StandardOutput=append:/var/log/rhode_island-scraper.log
StandardError=append:/var/log/rhode_island-scraper-error.log
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
