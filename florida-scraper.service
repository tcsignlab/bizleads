[Unit]
Description=Florida Business Scraper - 24 Hour Scheduler
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/bizleads-main
ExecStart=/usr/bin/python3 /path/to/bizleads-main/florida_scheduler.py
Restart=always
RestartSec=60
StandardOutput=append:/var/log/florida-scraper.log
StandardError=append:/var/log/florida-scraper-error.log

# Environment
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
