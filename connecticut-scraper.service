[Unit]
Description=Connecticut Business Scraper - 24 Hour Scheduler
After=network.target

[Service]
Type=simple
User=your_username
WorkingDirectory=/path/to/bizleads-main
ExecStart=/usr/bin/python3 /path/to/bizleads-main/connecticut_scheduler.py
Restart=always
RestartSec=60
StandardOutput=append:/var/log/connecticut-scraper.log
StandardError=append:/var/log/connecticut-scraper-error.log
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
